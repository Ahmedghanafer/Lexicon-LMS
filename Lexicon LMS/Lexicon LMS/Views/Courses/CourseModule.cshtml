@model IEnumerable<Lexicon_LMS.Models.Module>



<h2>Modules</h2>

@if (User.IsInRole("Teacher"))
{
<p>
    @Html.ActionLink("Create New", "Create", "Modules")
</p>}


          


            <table class="table">


                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.ModuleName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EndDate)
                    </th>
                    <th></th>
                </tr>
    
        @foreach (var item in Model)
    {

        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.ModuleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>

            <td>
                <button type="button" class="btn btn-outline-primary  btn-sm"> 
                @Html.ActionLink("Activity", "ActivityModule", "Modules", new { id = item.Id }, null)
                </button>

                <button type="button" class="btn btn-outline-primary  btn-sm">
                    @Html.ActionLink("Details", "Details", "Modules", new { id = item.Id }, null)
                </button>

                @if (User.IsInRole("Teacher"))
                {
            <button type="button" class="btn btn-outline-primary  btn-sm">
                @Html.ActionLink("Edit", "Edit", "Modules", new { id = item.Id }, null)
            </button>
                <button type="button" class="btn btn-outline-primary  btn-sm">
                    @Html.ActionLink("Delete", "Delete", "Modules", new { id = item.Id }, null)
                    </button>
                    }



            </td>
        </tr>
}

        </table>
